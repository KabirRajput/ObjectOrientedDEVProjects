package IntervalInterviewQuestion.interval;

import static org.junit.Assert.assertArrayEquals;
import static org.junit.Assert.assertEquals;

import java.util.ArrayList;
import java.util.List;

import org.junit.Test;

public class IntevalTest {
	


	@Test
	public void test1_interval_getSize() {
		
		//arrange
		Integer[] a= {7,10};
		IntervalMerger mergeInterval = new IntervalMerger();

		//act
		mergeInterval.addInterval(a);
		List<Integer[]> result = mergeInterval.getResult();
		
		//assert
		assertEquals(1, result.size());
	
	}
	
	@Test
	public void test2_interval_getValue() {
		
		//arrange
		int[] a= {7,10};
		IntervalMerger mergeInterval = new IntervalMerger();

		//act
		mergeInterval.addInterval(a);
		List<int[]> result = mergeInterval.getResult();
		
		//assert
		assertArrayEquals(a, result.get(0));
		
	
	}
	
	/*
	@Test
	public void test3_2intervals_getValue() {
		
		//arrange
		Integer[] a= {7,10};
		Integer[] b= {11,12};
		IntervalMerger mergeInterval = new IntervalMerger();

		//act
		mergeInterval.addInterval(a);
		mergeInterval.addInterval(b);
		List<Integer[]> result = mergeInterval.getResult();
		
		//assert
		assertEquals(a.toString()+b.toString(), result.toString());
	}
	*/
	
	

}
