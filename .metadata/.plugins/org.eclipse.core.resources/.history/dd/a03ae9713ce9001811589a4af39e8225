package fibonacci.fibonacci;
public class Fibonacci {

	public int computeFib(int num) {	
		
		/*with recursion, I didn't need to define these variables since the method 
		would simply call itself repeatedly until the base condition.
		For the loop, I decided to use a variable num3 to get the sum of the first 
		2 numbers and then swap the numbers as it can be seen from the loop. */
		int num1 = 0;
		int num2 = 1;
		int num3 =0;
		
		for (int i=1;i<=num;i++)
		{
			num3 = num1 + num2;    
			num1 = num2;
			num2 = num3;
		}
		return num3;

	}

}
